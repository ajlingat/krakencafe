@model List<CoffeeShop.Models.OrderConfirmationVM>
@{
    ViewData["Title"] = "OrderHistory";
}

<h2>Order History</h2>

<div>
    @if (Model.Count == 5)
    {
        <a asp-action="OrderHistory" asp-route-id="1" class="btn btn-sm btn-success">Load all orders</a>

    }
</div>
<br />
@if (Model.Count > 0)
{
    @foreach (var item in Model)
    {
        <div class="thumbnail row">
            @Html.Partial("_IndividualOrderDetail", item)
        </div>

    }

}
else
{
    <p>No past orders available...</p>
}
<br />

