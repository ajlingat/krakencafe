@model IEnumerable<CoffeeShop.Data.MenuItem>

@{
    ViewData["Title"] = "Index";
}

<br />
<h2>Menu Item List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Name
            </th>
            <th>
               Price
            </th>
            <th>
                Category Type
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryType.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="glyphicon glyphicon-edit"> Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="glyphicon glyphicon-list"> Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="glyphicon glyphicon-trash"> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
