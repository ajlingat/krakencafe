@model IEnumerable<CoffeeShop.Data.CategoryType>

@{
    ViewData["Title"] = "Index";
}

<h2>Category Type List</h2>
<br />

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div>
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Display Order
            </th>
            <th> </th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.DisplayOrder
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="glyphicon glyphicon-edit"> Edit</a> | 
                <a asp-action="Details" asp-route-id="@item.Id" class="glyphicon glyphicon-list"> Details</a> | 
                <a asp-action="Delete" asp-route-id="@item.Id" class="glyphicon glyphicon-trash"> Delete</a>
            </td>
        </tr>
        }
    </table>
</div>

